@attribute [Authorize(Roles = "Admin")]
<Microsoft.AspNetCore.Components.Authorization.AuthorizeView Roles="Admin">
    <Authorized>
        <MudDialog>
            <DialogContent>
                <MudToolBar>
                    <MudStack Row="true">
                        <MudButton StartIcon="@Icons.Material.Filled.Settings" OnClick="OpenSkillDetailDialog">
                            Skill Details
                        </MudButton>
                        <MudButton StartIcon="@Icons.Material.Filled.Settings" OnClick="OpenSkillDescriptionDialog">
                            Skill Description More
                        </MudButton>
                    </MudStack>

                </MudToolBar>
                <MudTextField T="string" Label="Name" @bind-Value="CharacterSkill.Name" />
                <MudTextField T="string" Label="Description" @bind-Value="CharacterSkill.Description" AutoGrow="true" />
                <MudFileUpload Context="MudUpload" T="IBrowserFile" MaximumFileCount="20971520" Accept=".png, .jpg, .jpeg" OnFilesChanged="FilesChanged">
                    <ButtonTemplate Context="MudUpload">
                        <MudFab HtmlTag="label"
                                Color="Color.Success"
                                Icon="@Icons.Material.Filled.AttachFile"
                                for="@MudUpload.Id" />
                    </ButtonTemplate>
                    <SelectedTemplate>
                        @if (CharacterSkill.ImageFile is not null)
                        {
                            <MudImage Src="@imageData" />
                        }
                    </SelectedTemplate>
                </MudFileUpload>
            </DialogContent>
            <DialogActions>
                <MudButton StartIcon="@Icons.Material.Filled.Save" OnClick="SaveCharacterSkill">
                    Save
                </MudButton>
            </DialogActions>
        </MudDialog>
    </Authorized>
</Microsoft.AspNetCore.Components.Authorization.AuthorizeView>

