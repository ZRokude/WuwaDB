
<MudDialog>
    <DialogContent>
        <MudNumericField T="int" Variant="Variant.Outlined" Label="HP" @bind-Value="CharacterStats.HP" />
        <MudNumericField T="int" Variant="Variant.Outlined" Label="ATK" @bind-Value="CharacterStats.ATK" />
        <MudNumericField T="int" Variant="Variant.Outlined" Label="Defense" @bind-Value="CharacterStats.DEF" />
        <MudNumericField T="double" Step="0.01" Variant="Variant.Outlined" Label="Crit Chance" @bind-Value="CharacterStats.Critical_Rate" />
        <MudNumericField T="double" Step="0.01" Variant="Variant.Outlined" Label="Crit DMG" @bind-Value="CharacterStats.Critical_Damage" />
        <MudNumericField T="double" Step="0.01" Variant="Variant.Outlined" Label="Energy Regen" @bind-Value="CharacterStats.Energy_Regen" />
        <MudNumericField T="double" Step="0.01"Variant="Variant.Outlined" Label="Max Resonance Energy" @bind-Value="CharacterStats.Max_Resonance_Energy" />
